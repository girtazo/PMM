<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SpinnerSimple">
    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="45dp"
        android:text="Nombre:"
    />
    <EditText
       android:id="@+id/editTextNombre"
       android:layout_width="150dp"
       android:layout_height="30dp"
       android:layout_toRightOf="@id/textViewNombre"
       android:layout_alignBaseline="@id/textViewNombre"
    />
    <TextView
        android:id="@+id/textViewApellidos"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="45dp"
        android:text="Apellidos:"
        android:layout_below="@id/textViewNombre"
        />
    <EditText
        android:id="@+id/editTextApellidos"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/textViewApellidos"
        android:layout_alignBaseline="@id/textViewApellidos"
        />
    <TextView
        android:id="@+id/textViewEdad"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:text="Edad:"
        android:layout_below="@id/textViewApellidos"
        />
    <Spinner
        android:id="@+id/spinnerEdad"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/textViewEdad"
        android:layout_below="@id/textViewApellidos">
    </Spinner>
</RelativeLayout>
